{
  "editor.tabSize": 2,
  "editor.rulers": [
    80,
    120
  ],
  "extensions.ignoreRecommendations": false,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.next": true
  },
  "editor.formatOnSave": true,
  "editor.autoIndent": true
}
